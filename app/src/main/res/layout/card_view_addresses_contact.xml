<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
        name="contact"
        type="com.demo.bryanbeale.codetestbryanbeale.DataModels.Contact"/>

    </data>
<android.support.v7.widget.CardView
    android:id="@+id/address_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/card_margin"
    android:layout_marginRight="@dimen/card_margin"
    android:layout_marginTop="@dimen/card_margin_for_list"
    android:layout_marginBottom="@dimen/card_margin_for_list">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/names"
            style="@style/Widget.CardContent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <EditText
                android:id="@+id/address1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_default_size"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:hint="Address1"
                android:freezesText="true"
                android:background="@android:color/transparent"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/address2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_default_size"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:hint="Address2"
                android:freezesText="true"

                android:background="@android:color/transparent"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_default_size"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:hint="City"
                android:freezesText="true"
                android:background="@android:color/transparent"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/state"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_default_size"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:hint="State"
                android:freezesText="true"
                android:background="@android:color/transparent"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/zip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_default_size"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:hint="Zip"
                android:freezesText="true"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:numeric="integer"/>

            <Button
                android:id="@+id/showMap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Show on Map"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/transparent"
                android:visibility="gone"
                android:drawableRight="@drawable/ic_location"
                android:paddingRight="50dp"
                android:paddingLeft="70dp"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
</layout>