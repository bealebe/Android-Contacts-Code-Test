<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
        name="contact"
        type="com.demo.bryanbeale.codetestbryanbeale.DataModels.Contact"/>

    </data>
<android.support.v7.widget.CardView
    android:id="@+id/address_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/card_margin"
    android:layout_marginRight="@dimen/card_margin"
    android:layout_marginTop="@dimen/card_margin_for_list"
    android:layout_marginBottom="@dimen/card_margin_for_list">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/names"
            style="@style/Widget.CardContent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_default_size"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:hint=""
                android:drawableLeft="@drawable/ic_phone"
                android:freezesText="true"
                android:background="@android:color/transparent"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_default_size"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:hint=""
                android:drawableLeft="@drawable/ic_message"
                android:freezesText="true"
                android:background="@android:color/transparent"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_default_size"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:hint=""
                android:drawableLeft="@drawable/ic_location"
                android:freezesText="true"
                android:background="@android:color/transparent"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/faceBook"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_default_size"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:hint=""
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_facebook"
                android:freezesText="true"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/twitter"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_default_size"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:hint=""
                android:freezesText="true"
                android:drawableLeft="@drawable/ic_twitter"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:numeric="integer"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
</layout>